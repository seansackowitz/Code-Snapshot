        <avalonEdit:TextEditor xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" Name="fileText" FontFamily="Consolas" FontSize="10pt" ShowLineNumbers="True" SyntaxHighlighting="C#" Margin="180,50,0,0" Foreground="{DynamicResource textColor}" Grid.ColumnSpan="2" IsReadOnly="True" LineNumbersForeground="{DynamicResource lineNumbersColor}"/>
        
        <!--Displays the snapshot's viewing name-->
        <TextBox Name="fileName" Margin="181,0,250,0" VerticalAlignment="Top" Height="29" Foreground="{DynamicResource textColor}" FontSize="16" FontWeight="Bold" TextDecorations="{x:Null}" Background="{DynamicResource toolBarBackColor}" Grid.ColumnSpan="2" KeyUp="fileName_KeyUp" LostFocus="fileName_LostFocus" BorderThickness="0" BorderBrush="{DynamicResource WindowTitleColorBrush}"/>
        
