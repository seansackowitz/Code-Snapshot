        <ComboBox Name="comboBox" Width="249" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Height="50" SelectionChanged="comboBox_SelectionChanged" BorderThickness="0" Background="{DynamicResource toolBarBackColor}" BorderBrush="{DynamicResource WindowTitleColorBrush}"/>
        
        <!--Displays the file location-->
        <TextBlock Name="fileLocation" Margin="181,30,350,0" TextWrapping="Wrap" Grid.ColumnSpan="2" Background="{DynamicResource toolBarBackColor}" Height="20" VerticalAlignment="Top"/>
        
        <!--Allows selection of the syntax-->
        <ComboBox Name="fileTypeBox" ToolTip="Syntax Highlighting" Grid.Column="1" Margin="0,30,250,0" VerticalAlignment="Top" Height="20" Width="99" BorderThickness="0" Background="{DynamicResource toolBarBackColor}" MinHeight="20" HorizontalAlignment="Right" SelectionChanged="fileTypeBox_SelectionChanged"/>
        
        <!--Blocks user from clicking on items when settings panel is open. Also closes settings when clicked.-->
        <Rectangle Name="blockingPanel" Fill="{DynamicResource blockingPanelColor}" Grid.ColumnSpan="2" Margin="0,0,0,0" Visibility="Collapsed" MouseDown="blockingPanel_MouseDown"/>
    </Grid>
