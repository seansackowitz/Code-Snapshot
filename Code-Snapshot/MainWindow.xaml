    <!--End Settings Button-->

    <!--Begin Setting Flyout Panel-->
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout Name="settingsFlyout" Header="Settings" Position="Right" Width="300" Background="{DynamicResource settingsPanelColor}">
                <StackPanel Orientation="Vertical" Margin="10">
                    <StackPanel.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </StackPanel.Resources>
                    <TextBlock Name="label1" Text="File Excludes:"/>
                    <TextBox Name="txtFileExcludes" Margin="0,0,0,20" />
                    <TextBlock Name="label2" Text="Folder Excludes:"/>
                    <TextBox Name="txtFolderExcludes" Margin="0,0,0,20"/>
                    <CheckBox Name="chkHiddenFolders" Margin="0,0,0,20">Ignore Hidden Folders</CheckBox>
                    <CheckBox Name="chkHiddenFiles" Margin="0,0,0,20">Ignore Hidden Files</CheckBox>
                    <Button Name="settingsAccept" Width="100" Click="settingsAccept_Click">Accept</Button>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    <!--End Setting Flyout Panel-->

